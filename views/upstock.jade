extends layout


block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Upload product to Stock
					div.account-wall
						form(class='form-signin', action='/up', method='POST')
							input(type='text', name='name' class='form-control', placeholder='Name',required, autofocus)
							input(type='text', name='lot' class='form-control', placeholder='Lot',required)
							input(type='text', name='date' class='form-control', placeholder='Date',required)
							input(type='text', name='SAP' class='form-control', placeholder='SAP',required)
							input(type='text', name='number' class='form-control', placeholder='Number',required)
							input(type='text', name='barcode' class='form-control', placeholder='BarCode',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
							span.clearfix
					#message
					if message
						h1.text-center.error-message #{message}
