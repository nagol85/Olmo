extends layout


block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				div.account-wall
					h1.text-center.login-title Define Products
					br
					form(class='form-signin', action='/product', method='POST')
						input(type='text', name='name' class='form-control', placeholder='Name',required, autofocus)
						input(type='text', name='sap' class='form-control', placeholder='SAP ID',required)
						input(type='text', name='stability' class='form-control', placeholder='Stability (days)')
						input(type='textarea', name='notes' class='form-control', placeholder='Note', rows="5")
						br
						button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
						span.clearfix
				#message
				if message
					h1.text-center.error-message #{message}

		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Select SAP HTML
					div.account-wall
						form(action='/upload', method='POST', enctype='multipart/form-data')
							input(type='file', name='archivo')
							br
							button(class='btn btn-lg btn-primary btn-block', type='submit') Cargar
